{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "indent": [
            2,
            2,
            {
              "SwitchCase": 1,
              "VariableDeclarator": 0
            }
        ],
        "keyword-spacing": [
          2,
          {
            "before": true,
            "after": true
          }
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "no-multiple-empty-lines": [
          2,
          {
            "max": 2,
            "maxEOF": 1,
            "maxBOF": 0
          }
        ],
        "no-multi-spaces": [
          2
        ],
        "no-var": [
          2
        ],
        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],
        "semi": [
            2,
            "always"
        ]
    }
}
