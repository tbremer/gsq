{
  "name": "gsq",
  "version": "1.0.0",
  "description": "",
  "bin": {
    "gsq": "./.bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tbremer/gsq.git"
  },
  "author": {
    "name": "Tom Bremer",
    "email": "tom@tbremer.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tbremer/gsq/issues"
  },
  "homepage": "https://github.com/tbremer/gsq#readme",
  "preferGlobal": true,
  "scripts": {
    "test": "eslint src/**",
    "build": "npm run build:css && npm run build:html && npm run build:js",
    "build:css": "postcss --config ./postcss-config.json src/css/app.css",
    "build:html": "copyfiles --up 1 'src/**/*.html' 'htdocs/'",
    "build:js": "browserify src/js/app.js -o htdocs/assets/js/app.js -t [ babelify --presets [ es2015 ] --plugins [ transform-object-rest-spread transform-object-assign ] ]",
    "mkdirs": "mkdirp htdocs/assets/css htdocs/assets/js",
    "watch": "babel-node build-scripts/watch.js",
    "watch:start": "babel-node build-scripts/watch-start.js",
    "watch:css": "babel-node ./build-scripts/watch-css.js",
    "watch:html": "babel-node ./build-scripts/watch-html.js",
    "watch:js": "babel-node ./build-scripts/watch-js.js",
    "start": "browser-sync start --config bs-config.js",
    "postinstall": "npm run mkdirs && npm run build"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-object-assign"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-cli": "^6.5.1",
    "babel-plugin-transform-object-assign": "^6.5.0",
    "babel-plugin-transform-object-rest-spread": "^6.6.5",
    "babel-preset-es2015": "^6.5.0",
    "babel-register": "^6.6.5",
    "babelify": "^7.2.0",
    "browser-sync": "^2.11.1",
    "browserify": "^13.0.0",
    "chalk": "^1.1.1",
    "copyfiles": "^0.2.1",
    "eslint": "^2.2.0",
    "fs-extra": "^0.26.5",
    "mkdirp": "^0.5.1",
    "postcss": "^5.0.16",
    "postcss-cli-simple": "^1.0.1",
    "postcss-css-variables": "^0.5.1",
    "postcss-custom-media": "^5.0.1",
    "postcss-discard-comments": "^2.0.4",
    "postcss-import": "^8.0.2",
    "postcss-nesting": "^2.2.0",
    "postcss-reporter": "^1.3.1",
    "recursive-copy": "^2.0.2"
  }
}
